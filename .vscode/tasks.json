{
    "version": "2.0.0",
    "command": "g++",
    "args": [
        "-g",
        "-fexec-charset=GBK",   // 处理mingw中文编码问题
        "-finput-charset=UTF-8",// 处理mingw中文编码问题
        "${file}",
        "-o",
        "${workspaceFolder}/cpp/exe/${fileBasenameNoExtension}.exe",
    ], // 编译命令参数
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
            "relative",
            "\\"
        ],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}
